@model Intellect.Models.ViewModels.AdminViewModel

@{
    Layout = "AdminLayout";
}

<h4>Are you sure to delete @Model.Answer.Description ?</h4>

<form method="post" asp-action="DeleteAnswer" asp-controller="Admin">
    <button type="submit">Yes</button>
</form>
<br />
<form method="get">
    <button type="submit" asp-action="Admin" asp-controller="Admin">No</button>
</form>
