@model Intellect.Models.ViewModels.RegisterModel

@{
    ViewData["Title"] = "RegisterUser";
}

<section id="loginSec">
    <div class="container">
        <div class="loginBox">
            <div class="imgBox">
                <img src="~/images/driver.png" alt="">
            </div>
            <div class="formBox">
                <form method="post" asp-action="RegisterUser" asp-controller="Account" class="myLogForm">                   
                    <div class=" form-row ">
                        <div class=" form-group col-md-12 ">
                            <label asp-for="UserName">İstifadəçi adı</label>
                            <input asp-for="UserName" type="text" class="form-control" id="inputEmail4">
                            <span asp-validation-for="UserName"></span>
                        </div>
                        <div class=" form-group col-md-12 ">
                            <label asp-for="Email">Email </label>
                            <input asp-for="Email" type="email" class="form-control" id="inputEmail4">
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="Password">Şifrə</label>
                            <input asp-for="Password" type="password" class="form-control">
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="ConfirmPassword">Şifrəni təsdiq et</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control">
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>
                    </div>
                    <button type="submit" class=" btn btn-primary">Davam et<i class="far fa-hand-point-right"></i></button>
                    <br>
                    <br>
                    <p>Artıq üzvsən? <a asp-action="LoginUser" asp-controller="Account">Daxil ol</a></p>
                </form>
            </div>
        </div>
    </div>
</section> 
